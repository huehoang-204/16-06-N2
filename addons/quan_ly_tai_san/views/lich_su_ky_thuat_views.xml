<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_lich_su_ky_thuat_tree" model="ir.ui.view">
            <field name="name">lich_su_ky_thuat.tree</field>
            <field name="model">lich_su_ky_thuat</field>
            <field name="arch" type="xml">
                <tree string="Lịch sử kỹ thuật">
                    <field name="ngay"/>
                    <field name="tai_san_id"/>
                    <field name="noi_dung"/>
                    <field name="ghi_chu"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_lich_su_ky_thuat_form" model="ir.ui.view">
            <field name="name">lich_su_ky_thuat.form</field>
            <field name="model">lich_su_ky_thuat</field>
            <field name="arch" type="xml">
                <form string="Lịch sử kỹ thuật">
                    <sheet>
                        <group>
                            <group>
                                <field name="tai_san_id"/>
                                <field name="ngay"/>
                            </group>
                            <group>
                                <field name="noi_dung" placeholder="Mô tả tình trạng kỹ thuật..."/>
                                <field name="ghi_chu" placeholder="Ghi chú thêm..."/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_lich_su_ky_thuat_search" model="ir.ui.view">
            <field name="name">lich_su_ky_thuat.search</field>
            <field name="model">lich_su_ky_thuat</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm lịch sử kỹ thuật">
                    <field name="tai_san_id"/>
                    <field name="noi_dung"/>
                    <filter string="Tháng này" name="this_month" 
                            domain="[('ngay', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('ngay', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Năm nay" name="this_year" 
                            domain="[('ngay', '&gt;=', (context_today() - relativedelta(month=1, day=1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Tài sản" name="group_tai_san" context="{'group_by': 'tai_san_id'}"/>
                        <filter string="Ngày" name="group_ngay" context="{'group_by': 'ngay'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_lich_su_ky_thuat" model="ir.actions.act_window">
            <field name="name">Lịch sử kỹ thuật</field>
            <field name="res_model">lich_su_ky_thuat</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_lich_su_ky_thuat_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo lịch sử kỹ thuật mới
                </p>
                <p>
                    Ghi lại các sự cố kỹ thuật, hư hỏng của tài sản.
                </p>
            </field>
        </record>
    </data>
</odoo>
