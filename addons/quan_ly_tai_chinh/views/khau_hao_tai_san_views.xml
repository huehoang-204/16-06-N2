<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="khau_hao_tai_san_tree" model="ir.ui.view">
            <field name="name">khau_hao_tai_san.tree</field>
            <field name="model">khau_hao_tai_san</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tai_san_id"/>
                    <field name="ngay_bat_dau"/>
                    <field name="so_nam_khau_hao"/>
                    <field name="gia_tri_khau_hao_hang_nam"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="khau_hao_tai_san_form" model="ir.ui.view">
            <field name="name">khau_hao_tai_san.form</field>
            <field name="model">khau_hao_tai_san</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="tai_san_id"/>
                            <field name="ngay_bat_dau"/>
                            <field name="so_nam_khau_hao"/>
                            <field name="gia_tri_khau_hao_hang_nam"/>
                            <field name="tong_gia_tri_khau_hao"/>
                            <field name="gia_tri_con_lai"/>
                            <field name="trang_thai"/>
                        </group>
                        <notebook>
                            <page string="Lịch khấu hao">
                                <field name="lich_khau_hao_ids">
                                    <tree>
                                        <field name="nam"/>
                                        <field name="ngay_khau_hao"/>
                                        <field name="gia_tri_khau_hao"/>
                                        <field name="da_ghi_nhan"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="khau_hao_tai_san_action" model="ir.actions.act_window">
            <field name="name">Khấu hao tài sản</field>
            <field name="res_model">khau_hao_tai_san</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>