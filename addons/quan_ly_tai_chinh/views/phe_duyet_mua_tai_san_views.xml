<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== FORM VIEW ========== -->
    <record id="view_phe_duyet_mua_tai_san_form" model="ir.ui.view">
        <field name="name">phe.duyet.mua.tai.san.form</field>
        <field name="model">phe_duyet_mua_tai_san</field>
        <field name="arch" type="xml">
            <form string="Phê duyệt mua tài sản">
                <header>
                    <button name="action_approve" string="Phê duyệt" type="object" 
                            class="oe_highlight" states="draft"
                            confirm="Xác nhận phê duyệt đơn mua tài sản này? Hệ thống sẽ tự động tạo tài sản và ghi nhận tài chính."/>
                    <button name="action_reject" string="Từ chối" type="object" 
                            states="draft" confirm="Bạn có chắc muốn từ chối đơn này?"/>
                    <button name="action_view_source_proposal" string="Xem đề xuất gốc" type="object" 
                            class="btn-secondary"/>
                    <button name="action_view_assets" string="Xem tài sản" type="object" 
                            class="btn-info" states="approved,done"
                            attrs="{'invisible': [('tai_san_count', '=', 0)]}"/>
                    <button name="action_view_journal_entry" string="Xem bút toán" type="object" 
                            class="btn-info" states="approved,done"
                            attrs="{'invisible': [('but_toan_id', '=', False)]}"/>
                    <button name="action_view_depreciation" string="Xem khấu hao" type="object" 
                            class="btn-info" states="approved,done"/>
                    <button name="action_cancel" string="Hủy" type="object" 
                            states="draft" confirm="Bạn có chắc muốn hủy đơn phê duyệt này?"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,approved,done"/>
                </header>
                
                <sheet>
                    <!-- Invisible fields for attrs -->
                    <field name="but_toan_id" invisible="1"/>
                    <field name="tai_san_count" invisible="1"/>
                    
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_source_proposal" type="object" class="oe_stat_button" 
                                icon="fa-file-text-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Đề xuất gốc</span>
                                <span class="o_stat_value"><field name="ma_de_xuat"/></span>
                            </div>
                        </button>
                        <button name="action_view_assets" type="object" class="oe_stat_button" 
                                icon="fa-cubes" attrs="{'invisible': [('tai_san_count', '=', 0)]}">
                            <field name="tai_san_count" widget="statinfo" string="Tài sản"/>
                        </button>
                        <button name="action_view_journal_entry" type="object" class="oe_stat_button" 
                                icon="fa-book" attrs="{'invisible': [('but_toan_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Bút toán</span>
                            </div>
                        </button>
                    </div>
                    
                    <!-- Alert Box -->
                    <div class="alert alert-info" role="alert" states="draft">
                        <strong>Lưu ý:</strong> Khi phê duyệt, hệ thống sẽ tự động:
                        <ul>
                            <li>Tạo tài sản trong module Quản lý tài sản</li>
                            <li>Ghi nhận bút toán kế toán (Nợ TK Tài sản - Có TK Nguồn vốn)</li>
                            <li>Tạo lịch khấu hao tự động</li>
                            <li>Ghi nhận vào kế toán quản trị</li>
                        </ul>
                    </div>
                    
                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="ma_phe_duyet" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="ten_de_xuat" readonly="1"/>
                        </h3>
                    </div>
                    
                    <!-- Main Content -->
                    <group>
                        <group string="Thông tin đề xuất">
                            <field name="de_xuat_mua_id" readonly="1" options="{'no_open': True}"/>
                            <field name="ngay_de_xuat" readonly="1"/>
                            <field name="nguoi_de_xuat_id" readonly="1"/>
                            <field name="phong_ban_id" readonly="1"/>
                            <field name="ngay_du_kien_nhan" readonly="1"/>
                        </group>
                        <group string="Thông tin phê duyệt">
                            <field name="ngay_tao" readonly="1"/>
                            <field name="nguoi_phe_duyet_id" readonly="1"/>
                            <field name="ngay_phe_duyet" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Tài chính">
                            <field name="don_vi_tien_te" readonly="1"/>
                            <field name="tong_gia_tri" widget="monetary" readonly="1"
                                   options="{'currency_field': 'don_vi_tien_te'}"/>
                        </group>
                        <group string="Tài khoản kế toán" states="draft">
                            <field name="tk_tai_san_id" required="1"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="tk_nguon_von_id" required="1"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="journal_id" required="1"
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group string="Tài khoản kế toán đã sử dụng" states="approved,done,rejected">
                            <field name="tk_tai_san_id" readonly="1"/>
                            <field name="tk_nguon_von_id" readonly="1"/>
                            <field name="journal_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Chi tiết thiết bị" name="details">
                            <field name="line_ids" readonly="1">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="ten_thiet_bi"/>
                                    <field name="danh_muc_ts_id"/>
                                    <field name="so_luong"/>
                                    <field name="don_vi_tinh"/>
                                    <field name="don_gia" widget="monetary"/>
                                    <field name="thanh_tien" widget="monetary" sum="Tổng"/>
                                    <field name="pp_khau_hao"/>
                                    <field name="thoi_gian_su_dung"/>
                                    <field name="ty_le_khau_hao"/>
                                    <field name="nha_cung_cap"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Lý do &amp; Mô tả" name="description">
                            <group>
                                <field name="ly_do" nolabel="1" readonly="1"/>
                            </group>
                            <separator string="Mô tả chi tiết"/>
                            <field name="mo_ta" nolabel="1" readonly="1"/>
                        </page>
                        
                        <page string="Ghi chú phê duyệt" name="approval_notes">
                            <field name="ghi_chu_phe_duyet" placeholder="Nhập ghi chú về quyết định phê duyệt..."/>
                        </page>
                        
                        <page string="Tài sản đã tạo" name="assets" 
                              attrs="{'invisible': [('tai_san_count', '=', 0)]}">
                            <field name="tai_san_ids" readonly="1">
                                <tree>
                                    <field name="ma_tai_san"/>
                                    <field name="ten_tai_san"/>
                                    <field name="danh_muc_ts_id"/>
                                    <field name="gia_tri_ban_dau"/>
                                    <field name="ngay_mua_ts"/>
                                    <field name="trang_thai_thanh_ly"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Kế toán quản trị" name="management_accounting"
                              attrs="{'invisible': [('state', 'in', ['draft', 'rejected', 'cancelled'])]}">
                            <field name="tai_khoan_quan_tri_ids" readonly="1">
                                <tree>
                                    <field name="ngay_ghi_nhan"/>
                                    <field name="loai_giao_dich"/>
                                    <field name="mo_ta"/>
                                    <field name="so_tien"/>
                                    <field name="phong_ban_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ========== TREE VIEW ========== -->
    <record id="view_phe_duyet_mua_tai_san_tree" model="ir.ui.view">
        <field name="name">phe.duyet.mua.tai.san.tree</field>
        <field name="model">phe_duyet_mua_tai_san</field>
        <field name="arch" type="xml">
            <tree string="Phê duyệt mua tài sản" 
                  decoration-primary="state=='draft'"
                  decoration-success="state in ('approved', 'done')"
                  decoration-danger="state=='rejected'"
                  decoration-muted="state=='cancelled'">
                <field name="ma_phe_duyet"/>
                <field name="ma_de_xuat"/>
                <field name="ten_de_xuat"/>
                <field name="ngay_tao"/>
                <field name="nguoi_de_xuat_id"/>
                <field name="phong_ban_id"/>
                <field name="tong_gia_tri" sum="Tổng" widget="monetary"/>
                <field name="don_vi_tien_te" invisible="1"/>
                <field name="nguoi_phe_duyet_id"/>
                <field name="ngay_phe_duyet"/>
                <field name="state" widget="badge"
                       decoration-primary="state=='draft'"
                       decoration-success="state in ('approved', 'done')"
                       decoration-danger="state=='rejected'"
                       decoration-muted="state=='cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- ========== SEARCH VIEW ========== -->
    <record id="view_phe_duyet_mua_tai_san_search" model="ir.ui.view">
        <field name="name">phe.duyet.mua.tai.san.search</field>
        <field name="model">phe_duyet_mua_tai_san</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phê duyệt mua tài sản">
                <field name="ma_phe_duyet"/>
                <field name="ma_de_xuat"/>
                <field name="ten_de_xuat"/>
                <field name="nguoi_de_xuat_id"/>
                <field name="phong_ban_id"/>
                <field name="nguoi_phe_duyet_id"/>
                
                <filter string="Chờ phê duyệt" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đã phê duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Hoàn thành" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Từ chối" name="rejected" domain="[('state', '=', 'rejected')]"/>
                
                <separator/>
                <filter string="Đơn của tôi" name="my_approvals" 
                        domain="[('nguoi_phe_duyet_id', '=', uid)]"/>
                <filter string="Cần phê duyệt" name="need_approval" 
                        domain="[('state', '=', 'draft')]"/>
                
                <separator/>
                <filter string="Tháng này" name="this_month" 
                        domain="[('ngay_tao', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('ngay_tao', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Năm nay" name="this_year" 
                        domain="[('ngay_tao', '&gt;=', (context_today() - relativedelta(day=1, month=1)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Nhóm theo">
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Người đề xuất" name="group_nguoi_de_xuat" context="{'group_by': 'nguoi_de_xuat_id'}"/>
                    <filter string="Người phê duyệt" name="group_nguoi_phe_duyet" context="{'group_by': 'nguoi_phe_duyet_id'}"/>
                    <filter string="Phòng ban" name="group_phong_ban" context="{'group_by': 'phong_ban_id'}"/>
                    <filter string="Tháng" name="group_month" context="{'group_by': 'ngay_tao:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ========== KANBAN VIEW ========== -->
    <record id="view_phe_duyet_mua_tai_san_kanban" model="ir.ui.view">
        <field name="name">phe.duyet.mua.tai.san.kanban</field>
        <field name="model">phe_duyet_mua_tai_san</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="ma_phe_duyet"/>
                <field name="ten_de_xuat"/>
                <field name="nguoi_de_xuat_id"/>
                <field name="tong_gia_tri"/>
                <field name="state"/>
                <field name="ngay_tao"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="ma_phe_duyet"/>
                                    </strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="ten_de_xuat"/>
                                    </span>
                                </div>
                                <span class="float-right badge badge-pill">
                                    <field name="state" widget="label"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <i class="fa fa-user"/> <field name="nguoi_de_xuat_id"/>
                                <br/>
                                <i class="fa fa-calendar"/> <field name="ngay_tao"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <strong><field name="tong_gia_tri" widget="monetary"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========== ACTION ========== -->
    <record id="action_phe_duyet_mua_tai_san" model="ir.actions.act_window">
        <field name="name">Phê duyệt mua tài sản</field>
        <field name="res_model">phe_duyet_mua_tai_san</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_need_approval': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Không có đơn phê duyệt nào
            </p>
            <p>
                Đơn phê duyệt mua tài sản được tạo tự động từ module Quản lý tài sản.<br/>
                Khi phê duyệt, hệ thống sẽ tự động tạo tài sản và ghi nhận kế toán.
            </p>
        </field>
    </record>

    <!-- ========== MENU ========== -->
    <menuitem id="menu_phe_duyet_mua_tai_san"
              name="Phê duyệt mua tài sản"
              parent="quan_ly_tai_san.menu_root"
              action="action_phe_duyet_mua_tai_san"
              sequence="15"/>
</odoo>
